{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "paths": {
      "@app/*": ["./src/app/*"],
      "@utils/*": ["./src/app/utils/*"],
      "@lib/*": ["./src/app/lib/*"],
      "@type/*": ["./src/app/lib/type/*"],
      "@enum/*": ["./src/app/lib/enum/*"],
      "@typography/*": ["./src/app/typography/*"]
    }
  }
}
